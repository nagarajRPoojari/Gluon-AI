{
  "name": "gluon-ai",
  "displayName": "Gluon",
  "description": "",
  "publisher": "NagarajPoojari",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nagarajRPoojari/Gluon-AI.git"
  },
  "main": "./extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Gluon AI",
        "properties": {
          "gluon-ai.apiKey": {
            "type": "string",
            "default": "",
            "description": "OpenAI API Key"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.generateDocumentation",
        "title": "Generate Documentation"
      },
      {
        "command": "extension.generateDocumentation2",
        "title": "Generate Documentation"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "customActivityBarSection",
          "title": "Gluon AI",
          "icon": "logo/images.svg"
        }
      ]
    },
    "views": {
      "customActivityBarSection": [
        {
          "id": "myTreeView",
          "name": "My Tree View",
          "icon": "logo/images.svg"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "langchain": "^0.0.131",
    "openai": "^4.0.0"
  }
}
